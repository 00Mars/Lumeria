  error: trigger.error.structure.multiple = "‚ùå Multiple triggers on a single line ‚Äî separate into flat declarations"
[/rule trigger.structure.flat]

[rule trigger.signal.name]
  check: signal uses symbolic naming (e.g., `pulse.tick`)
  error: trigger.error.signal.naming = "‚ùå Invalid signal name ‚Äî must use dot-path symbolic structure"
[/rule trigger.signal.name]

[/grammar trigger.rules.basic]


# üß† Validate logic consistency of trigger references:
[grammar trigger.rules.logic]

[rule trigger.structure.valid]
  check: trigger matches symbolic pattern `trigger: signal.name`
  error: trigger.error.format = "‚ùå Trigger format invalid ‚Äî must be `trigger: symbolic.signal`"
[/rule trigger.structure.valid]

[rule trigger.signal.redundant]
  check: trigger exists but no matching `[when signal.name]` block is present
  do: memory.append: grammar.validation.errors = "‚ö†Ô∏è Redundant trigger ‚Äî no matching signal handler block"
[/rule trigger.signal.redundant]

[rule trigger.signal.unknown]
  check: signal is not defined in `system.signal.registry`
  warning: trigger.warn.signal.unknown = "‚ö†Ô∏è Trigger references unknown or unregistered signal"
[/rule trigger.signal.unknown]

[/grammar trigger.rules.logic]


# üß¨ Advanced semantic validation for symbolic triggers:
[grammar trigger.rules.advanced]

[rule trigger.valid.names]
  check: signal name uses valid symbolic identifiers (dot-path)
  error: trigger.error.name.invalid = "‚ùå Invalid trigger name ‚Äî use dot-separated symbolic syntax"
[/rule trigger.valid.names]

[rule trigger.duplicate]
  check: no duplicate trigger signals exist in a single capsule
  warning: trigger.warn.duplicate = "‚ö†Ô∏è Duplicate trigger signal ‚Äî may indicate redundant logic"
[/rule trigger.duplicate]

[rule trigger.without.handler]
  check: each trigger corresponds to at least one `[when signal]` block
  warning: trigger.warn.no.handler = "‚ö†Ô∏è Trigger declared with no matching `when:` block"
[/rule trigger.without.handler]

[rule trigger.without.emit]
  check: triggered signal must eventually be emitted by a capsule
  warning: trigger.warn.unemitted = "‚ö†Ô∏è Trigger signal never emitted ‚Äî capsule may never activate"
[/rule trigger.without.emit]

[/grammar trigger.rules.advanced]

[/grammar trigger.validation]

