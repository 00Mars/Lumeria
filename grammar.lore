[rule draw.structure.flat]
  check: draw blocks must remain flat ‚Äî no JSON or object nesting
  error: draw.error.structure.flat = "‚ùå Draw structure must be flat ‚Äî avoid object nesting"
[/rule draw.structure.flat]

[rule draw.target.naming]
  check: all draw identifiers follow dot-path naming (e.g., `scene.menu`, `label.prompt`)
  error: draw.error.target.naming = "‚ùå Invalid draw target name ‚Äî use symbolic dot-path"
[/rule draw.target.naming]

[/grammar draw.rules.structure]


# ‚úÖ Validate supported draw actions and symbolic UI components
[grammar draw.rules.actions]

[rule draw.allowed.verbs]
  check: verbs allowed include: `draw.scene:`, `draw.label:`, `draw.button:`, `draw.icon:`, `draw.image:`
  error: draw.error.verb.unsupported = "‚ùå Unsupported draw verb ‚Äî not in symbolic UI spec"
