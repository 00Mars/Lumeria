  error: draw.error.target.unknown = "‚ùå Undefined draw target ‚Äî not in render schema"
[/rule draw.target.defined]

[/grammar draw.structure]


# üß† Validate semantic correctness of draw expressions
[grammar draw.semantic]

[rule draw.label.required]
  check: `draw.label:` includes static string or interpolated symbol
  error: draw.error.label.empty = "‚ùå Label text missing in `draw.label:`"
[/rule draw.label.required]

[rule draw.scene.naming]
  check: `draw.scene:` uses symbolic identifier (no spaces or quotes)
  error: draw.error.scene.naming = "‚ùå Invalid scene name ‚Äî must be symbolic"
