[rule draw.context.refs]
  check: draw values reference `ctx.` or `memory.`
  warning: draw.warn.unbound.input = "‚ö†Ô∏è Draw value lacks symbolic reference ‚Äî verify context"
[/rule draw.context.refs]

[rule draw.redraw.allowed]
  check: draw instructions may repeat across loops or updates
  note: draw.note.idempotent = "‚ÑπÔ∏è Draws are idempotent ‚Äî safe to reissue"
[/rule draw.redraw.allowed]

[/grammar draw.semantic]


# üîß Validate block layout and structure of draw declarations
[grammar draw.rules.structure]

[rule draw.block.optional]
  check: `[draw <x>]` is optional ‚Äî can appear in `[logic]` or `[when]`
  note: draw.note.block.optional = "‚ÑπÔ∏è Draw block is optional ‚Äî allowed inline or as scene layout"
[/rule draw.block.optional]

[rule draw.verb.required]
  check: each draw line starts with symbolic verb (e.g., `draw.button:`)
  error: draw.error.verb.missing = "‚ùå Missing draw verb ‚Äî must use symbolic `draw.*:`"
