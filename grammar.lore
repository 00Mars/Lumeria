[rule field.symbolic.naming]
  check: field.name matches /^[a-zA-Z0-9_.]+$/
  error: grammar.error.field.badNaming = "‚ùå Field names must be symbolic: alphanumeric, flat, and no quotes"
[/rule field.symbolic.naming]

[rule field.duplicate.check]
  check: field.name appears only once in any logic/memory/meta block
  warning: grammar.warn.field.duplicate = "‚ö†Ô∏è Duplicate field ‚Äî symbolic field names must be unique"
[/rule field.duplicate.check]

[/grammar reference.fields]


# üîÅ ‚úÖ Symbolic Verb Validation
[grammar reference.verbs]

[rule verb.allowed]
  check: verb.name in mnemonic.map.keys
  error: grammar.error.verb.unknown = "‚ùå Unknown verb ‚Äî not found in mnemonic map"
[/rule verb.allowed]

[rule verb.suggest.closestMatch]
  check: if verb.name not in mnemonic.map.keys
  suggest: closest.key from mnemonic.map.keys with fuzzy.match(verb.name)
  hint: grammar.hint.verb.suggestion = "ü§ñ Did you mean '{{ closest.key }}'?"
[/rule verb.suggest.closestMatch]

[/grammar reference.verbs]


# üè∑Ô∏è ‚úÖ Symbolic Tag Validation
[grammar reference.tags]

[rule tag.allowed]
  check: tag.name in grammar.reference.tags.valid_tags
  error: grammar.error.tag.invalid = "‚ùå Invalid tag ‚Äî not listed in symbolic tag registry"
[/rule tag.allowed]

[rule tag.suggest.closestMatch]
  check: if tag.name not in grammar.reference.tags.valid_tags
  suggest: closest.tag from grammar.reference.tags.valid_tags using fuzzy.match(tag.name)
  hint: grammar.hint.tag.suggestion = "ü§î Unknown tag. Maybe you meant '{{ closest.tag }}'?"
[/rule tag.suggest.closestMatch]

[/grammar reference.tags]


# ‚û°Ô∏è ‚úÖ Symbolic Prefix Validation
[grammar reference.prefixes]

[rule reference.prefix.allowed]
  check: reference.prefix in grammar.reference.symbolicPrefixes
  error: grammar.error.prefix.invalid = "‚ùå Disallowed symbolic prefix ‚Äî not found in valid prefix set"
