[trigger device.camera.capture.exec /]
[logic device.camera.capture.exec]
  > memory.set ctx.image = hardware.camera.snapshot()
  > draw.label: "ðŸ“· Captured image"
  > draw.show: ctx.image
[/logic device.camera.capture.exec]
[/capsule device.camera.capture.exec]

